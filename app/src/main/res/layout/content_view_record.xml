<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.louistsaitszho.erg2000.activity.ViewRecordActivity"
    tools:showIn="@layout/activity_view_record">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unkonwn event description"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStartDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown start date time"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No remark"
            android:layout_marginLeft="8dp"/>

        <include layout="@layout/dialog_detailed_record"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
