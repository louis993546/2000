<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npvHour"
            android:layout_gravity="center_horizontal"
            android:layout_width="64dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true"
            app:npv_HintText=":"
            app:npv_DividerColor="@color/colorPrimary"
            app:npv_TextColorNormal="@color/colorAccent"
            app:npv_TextColorSelected="@color/colorPrimaryDark"
            app:npv_TextColorHint="@color/colorPrimary"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npvMinute"
            android:layout_gravity="center_horizontal"
            android:layout_width="64dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true"
            app:npv_HintText=":"
            app:npv_DividerColor="@color/colorPrimary"
            app:npv_TextColorNormal="@color/colorAccent"
            app:npv_TextColorSelected="@color/colorPrimaryDark"
            app:npv_TextColorHint="@color/colorPrimary"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npvSecond"
            android:layout_gravity="center_horizontal"
            android:layout_width="64dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true"
            app:npv_HintText="."
            app:npv_DividerColor="@color/colorPrimary"
            app:npv_TextColorNormal="@color/colorAccent"
            app:npv_TextColorSelected="@color/colorPrimaryDark"
            app:npv_TextColorHint="@color/colorPrimary"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/npvDecisecond"
            android:layout_gravity="center_horizontal"
            android:layout_width="64dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp"
            app:npv_WrapSelectorWheel="true"
            app:npv_DividerColor="@color/colorPrimary"
            app:npv_TextColorNormal="@color/colorAccent"
            app:npv_TextColorSelected="@color/colorPrimaryDark"
            app:npv_TextColorHint="@color/colorPrimary"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRating"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textSize="18sp"/>

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/npvRating"
        android:layout_gravity="center_horizontal"
        android:layout_width="96dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:npv_DividerColor="@color/colorPrimary"
        app:npv_TextColorNormal="@color/colorAccent"
        app:npv_TextColorSelected="@color/colorPrimaryDark"
        app:npv_TextColorHint="@color/colorPrimary"
        android:layout_margin="4dp"
        android:contentDescription="test_number_picker_view"
        app:npv_ItemPaddingHorizontal="5dp"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeNormal="16sp"
        app:npv_TextSizeSelected="20sp"
        app:npv_WrapSelectorWheel="true"
        app:npv_HintText="s/m"/>

</LinearLayout>